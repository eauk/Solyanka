                <label for="id_full_name">Name</label>
                <div>
                    <input id="id_full_name" type="text" name="full_name" maxlength="255">

                </div>

                <label for="id_description">Description</label>
                <div>
                    <textarea id="id_description" rows="10" placeholder="Tell us about yourself in 160 characters" cols="40" name="description"></textarea>

