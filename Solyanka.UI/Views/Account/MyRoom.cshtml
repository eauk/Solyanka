        <fieldset class="span9">
            <h4>External Profiles</h4>
            <div class="control-group">
                <label class="control-label" for="id_website">Website</label>
                <div class="controls">
                    <input id="id_website" type="text" placeholder="http://..." name="website" maxlength="255">

                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="id_twitter">Twitter</label>
                <div class="controls">
                    <input id="id_twitter" type="text" placeholder="username" name="twitter" maxlength="255">

                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="id_github">GitHub</label>
                <div class="controls">
                    <input id="id_github" type="text" placeholder="username" name="github" maxlength="255">

                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="id_dribbble">Dribbble</label>
                <div class="controls">
                    <input id="id_dribbble" type="text" placeholder="username" name="dribbble" maxlength="255">

                </div>
            </div>
        </fieldset>

        <fieldset class="span9">
            <h4>Account settings</h4>
            <div class="control-group">
                <label class="control-label" for="id_default_view">Default view</label>
                <div class="controls">
                    <select name="default_view" id="id_default_view">
                        <option value="feed">Feed</option>
                        <option value="inbox" selected="selected">Inbox</option>
                    </select>

                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="id_default_list_privacy">Default list privacy</label>
                <div class="controls">


                    <select name="default_list_privacy" id="id_default_list_privacy" disabled="disabled">
                        <option value="public" selected="selected">Public</option>
                    </select>
                    Pro feature

                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="id_share_favorites">Share my favorites</label>
                <div class="controls">
                    <input checked="checked" type="checkbox" name="share_favorites" id="id_share_favorites">

                </div>
            </div>
        </fieldset>

        <fieldset>
            <div class="control-group">
                <div class="controls">
